<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout">

    <ImageView
        android:id="@+id/mImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/our_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="w,4:3"
        app:layout_constraintBottom_toTopOf="@+id/btnCapture"
        android:layout_marginBottom="32dp" />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/capture"
        android:id="@+id/btnCapture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btnChoose"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/choose"
        android:id="@+id/btnChoose"
        app:layout_constraintStart_toEndOf="@+id/btnCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/btnCapture"
        app:layout_constraintBottom_toBottomOf="@+id/btnCapture"
        style="@style/Widget.AppCompat.Button" />


</androidx.constraintlayout.widget.ConstraintLayout>
